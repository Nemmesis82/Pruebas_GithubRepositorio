<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Ruth</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>login.html</welcome-file>
    <welcome-file>login.htm</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>ContarElemento.html</welcome-file>
    <welcome-file>ContarElemento.htm</welcome-file>
    <welcome-file>ContarElemento.jsp</welcome-file>
    <welcome-file>menu.html</welcome-file>
    <welcome-file>menu.htm</welcome-file>
    <welcome-file>menu.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Pedir Autenticacion</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Para Medir Tiempo ISI</description>
    <display-name>MedirTime</display-name>
    <servlet-name>MedirTime</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.MedirTime</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MedirTime</servlet-name>
    <url-pattern>/MedirTime</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ContarElementosXMLServlet</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.ContarElementosXMLServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ContarElementosXMLServlet</servlet-name>
    <url-pattern>/ContarElementosXMLServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LeerXML</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.LeerXML</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LeerXML</servlet-name>
    <url-pattern>/LeerXML</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServletCookie</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.ServletCookie</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletCookie</servlet-name>
    <url-pattern>/ServletCookie</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>ServletError</servlet-name>
    <servlet-class>hibernate.ejemplos.clase.ServletError</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletError</servlet-name>
    <url-pattern>/ServletError</url-pattern>
  </servlet-mapping>
  
  <error-page>
	<error-code>404</error-code> 
	<location>/ServletError</location> 
  </error-page> 
  <error-page> 
	<exception-type> javax.servlet.ServletException </exception-type > 
	<location>/ServletError</location> 
  </error-page>
 
</web-app>